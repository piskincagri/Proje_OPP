@model Proje_OPP.Entitiy.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Günelleme Sayfası</h1>

<form method="post">

    @Html.Label("Ürün ID")
    @Html.TextAreaFor(x => x.ProductId, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextAreaFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextAreaFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Stok")
    @Html.TextAreaFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>





</form>