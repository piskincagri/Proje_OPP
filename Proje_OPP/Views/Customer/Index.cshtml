@using Proje_OPP.Entitiy
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteri Listesi</h1>

<table class="table table-bordered">

    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>

     </tr>
    @foreach(var item in Model)
   {
<tr>

    <td>@item.CustomerID</td>
    <td>@item.CustomerName</td>
    <td>@item.CustomerCity</td>


    <td><a href="/Customer/DeleteCustomers/@item.CustomerID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Customer/UpdateCustomers/@item.CustomerID" class="btn btn-success">Güncelle</a></td>

</tr>


    }

</table>

<a href="/Customer/AddCustomers/" class="btn btn-primary"> Yeni Müşteri Ekle</a>

